<h1> My lists </h1>

<div>
    <% @lists.each do |list|%>
    <p><%= link_to list.name, list_path(list) %></p>
    <%= link_to "Delete this list", list_path(list), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?'} %>
    <% end %>
</div>

<p><%= link_to "Create a new list", new_list_path %></p>
